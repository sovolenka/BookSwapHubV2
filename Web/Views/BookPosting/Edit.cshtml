@using Data.Models
@model BookPosting

@{
    ViewData["Title"] = "Edit post";
}
<div style="display: flex; justify-content: center;">
    <form asp-action="Edit" asp-controller="BookPosting" method="post" enctype="multipart/form-data">
        <h1>Edit a book</h1>
        <hr />
        <div class="form-group" style="width: 25rem; margin-bottom: 10px;">
            <label asp-for="Book.Name"></label>
            <input asp-for="Book.Name" class="form-control" />
        </div>
        <div class="form-group" style="width: 25rem; margin-bottom: 10px;">
            <label asp-for="Book.Author"></label>
            <input asp-for="Book.Author" class="form-control" />
        </div>
        <div class="form-group" style="width: 25rem; margin-bottom: 10px;">
            <label asp-for="Book.Genre"></label>
            <input asp-for="Book.Genre" class="form-control" />
        </div>
        <div class="form-group" style="width: 25rem; margin-bottom: 10px;">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="form-group" style="width: 25rem; margin-bottom: 10px;">
            <label asp-for="Book.PublicationYear">Publication Year</label>
            <input asp-for="Book.PublicationYear" class="form-control" type="number" min="1900"
                max="@DateTime.Now.Year" />
        </div>
        <div class="form-group" style="width: 25rem; margin-bottom: 10px;">
            <label asp-for="Book.Language"></label>
            <input asp-for="Book.Language" class="form-control" />
        </div>
        <div class="form-group" style="width: 25rem; margin-bottom: 10px;">
            <label asp-for="Book.Publisher"></label>
            <input asp-for="Book.Publisher" class="form-control" />
        </div>
        <div class="form-group" style="width: 25rem; margin-bottom: 10px;">
            <label asp-for="PictureUrl">Picture Url</label>
            <input asp-for="PictureUrl" class="form-control" />
        </div>
        <div class="form-group" style="width: 25rem; margin-bottom: 10px;">
            <label asp-for="Address.City"></label>
            <input asp-for="Address.City" class="form-control" />
        </div>
        <div class="form-group" style="width: 25rem; margin-bottom: 10px;">
            <label asp-for="Address.State"></label>
            <input asp-for="Address.State" class="form-control" />
            <br />
        </div>

        <button type="submit" class="btn btn-outline-secondary">Submit</button>
    </form>
</div>
