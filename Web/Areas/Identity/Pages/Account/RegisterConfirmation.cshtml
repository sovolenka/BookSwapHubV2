@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Environment

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    Please Check your email to confirm your account. <br>
    @if (Environment.IsDevelopment())
    {
      <p>
        DEBUG MODE: <a id = "confirm-link" href = "@Model.EmailConfirmationUrl" > Click here to confirm your account </a>
      </p>
    }
</p>
    }
    else
    {
<p>
        Please check your email to confirm your account.
</p>
    }
}
